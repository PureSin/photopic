<center>
<h1>Create new contest</h1>
<%= link_to "My contests", "/contests/me?userID=2" %>
<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <%= simple_form_for :contest, :url => '/contests' do |f| %>
    <%= f.hidden_field :creatorID, :value => "2" %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.hidden_field :isOutdoor, as: :boolean, :value => "0" %>
    <%= f.input :weather, as: :select, collection: @weather %>
    <%= f.hidden_field :contestEndDate, :value => "now", label: "Contest end time" %>
    <%= f.input :price, label: "Contest prize amount" %>
    <%= f.hidden_field :latitude, :value => "1.2" %>
    <%= f.hidden_field :longitude, :value => "2.1" %>
    <br>
    <%= f.button :submit, label: "create new contest" %>
<% end %>
  </tbody>
</table>
</center>
